<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="paperformat_custom_purchase" model="report.paperformat">
            <field name="name">Custom Purchase</field>
            <field name="format">custom</field>
            <field name="page_height">297</field>
            <field name="page_width">210</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
            <field name="disable_shrinking" eval="False"/>
        </record>


        <record id="action_report_custom_purchase_order" model="ir.actions.report">
            <field name="name">Custom Purchase Report</field>
            <field name="model">purchase.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_purchase.report_custom_purchase_order</field>
            <field name="report_file">custom_purchase.report_custom_purchase_order</field>
            <field name="print_report_name">'Custom Purchase Report - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_purchase_order" />
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="custom_purchase.paperformat_custom_purchase" />
        </record>
    </data>
</odoo>