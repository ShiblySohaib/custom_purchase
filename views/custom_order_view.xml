<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="custom_order_form" model="ir.ui.view">
        <field name="name">custom.purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="mode">primary</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//sheet//field[@name='partner_id']" position="attributes">
                    <attribute name="readonly">state != 'draft'</attribute>
                </xpath>
                <xpath expr="//sheet//field[@name='partner_ref']" position="attributes">
                    <attribute name="readonly">state != 'draft'</attribute>
                </xpath>
                <xpath expr="//sheet//field[@name='date_order']" position="attributes">
                    <attribute name="readonly">state != 'draft'</attribute>
                </xpath>
                <xpath expr="//sheet//field[@name='date_planned']" position="attributes">
                    <attribute name="readonly">state != 'draft'</attribute>
                </xpath>
                <xpath expr="//sheet//field[@name='order_line']" position="attributes">
                    <attribute name="readonly">state != 'draft'</attribute>
                </xpath>
                <xpath expr="//sheet//field[@name='currency_id']" position="attributes">
                    <attribute name="readonly">state != 'draft'</attribute>
                </xpath>
                <xpath expr="//sheet//field[@name='user_id']" position="attributes">
                    <attribute name="readonly">state != 'draft'</attribute>
                </xpath>
                <xpath expr="//sheet//field[@name='payment_term_id']" position="attributes">
                    <attribute name="readonly">state != 'draft'</attribute>
                </xpath>
                <xpath expr="//sheet//field[@name='fiscal_position_id']" position="attributes">
                    <attribute name="readonly">state != 'draft'</attribute>
                </xpath>
                <xpath expr="//sheet//field[@name='notes']" position="attributes">
                    <attribute name="readonly">state != 'draft'</attribute>
                </xpath>
                <xpath expr="//sheet//field[@name='origin']" position="attributes">
                    <attribute name="readonly">state != 'draft'</attribute>
                </xpath>
                <xpath expr="//sheet//field[@name='priority']" position="attributes">
                    <attribute name="readonly">state != 'draft'</attribute>
                </xpath>
                <xpath expr="//form/header" position="replace">
                    <header>
                        <button name="button_send" type="object" invisible="state != 'draft'"
                            string="Submit" class="oe_highlight"
                            groups="custom_purchase.group_procurement_team"
                        />
                        <button name="button_confirm" type="object" invisible="state != 'sent'"
                            string="Confirm" class="oe_highlight"
                            groups="custom_purchase.group_coo"
                        />

                        <button name="button_approve" type="object"
                            invisible="approve_btn_invisibility"
                            string="Approve" class="oe_highlight"
                            groups="custom_purchase.group_coo,custom_purchase.group_md"
                        />


                        <button name="button_draft" invisible="state != 'canceled'"
                            groups="custom_purchase.group_procurement_team"
                            string="Set to Draft"
                            class="oe_highlight"
                            type="object" />

                        <button name="custom_purchase.action_report_custom_purchase_order"
                            invisible="state != 'done'"
                            string="Print Report"
                            class="oe_highlight"
                            type="action" />

                        <button name="button_cancel"
                            invisible="state not in ('draft', 'confirmed', 'sent')"
                            string="Cancel" type="object" />

                        <field name="state" widget="statusbar"
                            statusbar_visible="draft,sent,confirmed"
                            readonly="1" />

                    </header>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="state" invisible="1" />
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="approve_btn_invisibility" invisible="1" />
                </xpath>


            </data>

        </field>
    </record>


    <record id="action_custom_order" model="ir.actions.act_window">
        <field name="name">Custom Purchase Orders</field>
        <field name="res_model">purchase.order</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="custom_order_form" />
    </record>

</odoo>